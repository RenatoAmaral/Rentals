<header class="page-header">
  <h1> All Categories</h1>
</header>
<div class="row">
  <div class="col-md-12  box">
    <%  @category.each do |category| %>
    <div class="cards col-md-4 innerbox">
      <a class="card bg-cat<%=category.id%> send" href="/categories/<%=category.id%>">
        <span class="card-header">
          <span class="card-title">

          </span>
        </span>
        <span class="card-summary">
          <h3><%= category.name %></h3>
        </span>
      </a>
    </div>
    <% end %>
  </div>
</div>


<script type="text/javascript">
$('.box .send').click(function(){
  $(this).parents('.innerbox').addClass('is-sent');
  setTimeout(function(){
    $('.innerbox').removeClass('is-sent');
  }, 1000);

});
</script>
