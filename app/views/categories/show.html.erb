<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <%  @product.each do |product| %>
      <div class="panel-heading">
        <h2><%= product.name %></h2>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="panel panel-default  panel--styled">
            <div class="panel-body">
              <div class="col-md-3 col-sd-5">
                <%= link_to image_tag(product.image.url(:medium), :class => "card-img-left"), product_path(product.id) %>
              </div>
              <div class="col-md-6 col-sd-4 ">
                <p class="card-text "><%= product.description %></p>
              </div>
              <div class="col-md-2">
                <p class="card-text">Price per day</p>
                <p class="card-text">Cad$ <strong><%= product.price %>.00</strong></p>
              </div>
            </div>
            <div class="panel-footer">
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
