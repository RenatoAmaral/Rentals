<div class="row">
  <div class="col-md-3">
    <div class="center">
      <%= image_tag image_url('avatar4.png'), class: "img-thumbnail" %>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">Verification</div>
      <div class="panel-body">

        <ul class="sidebar-list">
          <li>Email Address
            <ul>
              <li><%= @profile.email %></li>
            </ul>
          </li>
          <li>Phone Number
            <ul>
              <li><%= @profile.phone %></li>
            </ul>
          </li>
          <li>Address
            <ul>
              <li><%= @profile.address %></li>
            </ul>
          </li>
        </ul>

      </div>
      <li><%= link_to "Edit Profile", edit_profile_registration_path %></li>
    </div>
  </div>

  <div class="col-md-9">
    <h2><%= @profile.first_name %> <%= @profile.last_name %></h2>
  </div>

</div>
