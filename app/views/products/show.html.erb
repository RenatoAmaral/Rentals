<section class="products-show">

  <header class="page-header">
    <h1> <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url(:large), class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
       
        </dl>
    </div>

        <div class='row'>
          <dl class ='dl-horizontal'>

          </dl>
        </div>
        <div class="col-md-4">
          <%= render 'bookings/form' %>
      </div>


      <%= render 'partials/review' %>


  </article>

</section>
