<!-- The container --> 
<div class="products-index">

  <header class="page-header">
    <h1>Products</h1>
  </header>
  	<article class="product">

  		<%  @product.each do |product| %>
		   <div class="products"> 
		   	<tr>
  	 		 <td><h3><%=link_to  product.name,  product_path(product.id) %></h3></td>
  	 		 <td><%= image_tag product.image.url(:medium) %></td> 
  	 		 <td><%= product.description %></td>  

   		   </tr>
  	 		 <aside	class = "price">$<%= product.price %> 
  	 		 </aside>
   		   </div> 
  		<% end %>

    </article>
<aside class="sidebar">Sidebar - Map</aside>
</div>
